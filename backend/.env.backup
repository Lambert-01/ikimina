#Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Connection
MONGODB_URI=mongodb://127.0.0.1:27017/ikimina

# JWT Authentication
JWT_SECRET=ikimina_dev_secret_key_123
JWT_EXPIRE=30d

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Logging
LOG_LEVEL=info

# MTN Mobile Money Integration
MTN_MOMO_ENABLED=true
MTN_MOMO_API_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_API_VERSION=v1_0
MTN_MOMO_PRIMARY_KEY=your_primary_key
MTN_MOMO_SECONDARY_KEY=your_secondary_key
MTN_MOMO_USER_ID=your_user_id
MTN_MOMO_USER_SECRET=your_user_secret
MTN_MOMO_CALLBACK_URL=https://your-callback-url.com
MTN_MOMO_COLLECTIONS_KEY=your_collections_key
MTN_MOMO_COLLECTIONS_USER_ID=your_collections_user_id
MTN_MOMO_DISBURSEMENTS_KEY=your_disbursements_key
MTN_MOMO_DISBURSEMENTS_USER_ID=your_disbursements_user_id

# Airtel Money Integration
AIRTEL_ENABLED=true
AIRTEL_API_URL=https://openapi.airtel.africa
AIRTEL_API_VERSION=v1
AIRTEL_CLIENT_ID=your_client_id
AIRTEL_CLIENT_SECRET=your_client_secret
AIRTEL_CALLBACK_URL=https://your-callback-url.com

# Payment Configuration
PAYMENT_AUTO_VERIFY=true
PAYMENT_VERIFY_AFTER=30000
PAYMENT_VERIFICATION_INTERVAL=300000
PAYMENT_MAX_VERIFICATION_ATTEMPTS=10
PAYMENT_MAX_RETRY_ATTEMPTS=3
PAYMENT_RETRY_INTERVAL=60000
CONTRIBUTION_FEE_PERCENTAGE=0.5
LOAN_FEE_PERCENTAGE=1.0
MINIMUM_FEE=100
MAXIMUM_FEE=2000
CURRENCY_CODE=RWF

# SMS Configuration - Disabled for local testing
SMS_ENABLED=false
SMS_PROVIDER=rwandatel
SMS_API_KEY=your_sms_api_key
SMS_SECRET_KEY=your_sms_secret_key
SMS_SENDER_ID=IKIMINA
SMS_API_URL=https://api.rwandatel.rw

# Email Configuration - Disabled for local testing
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@ikimina.rw

# Push Notification Configuration
PUSH_ENABLED=false
FIREBASE_CREDENTIALS_FILE=firebase-credentials.json

# Notification Service Configuration
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000
NOTIFICATION_TTL=604800000

# Security Settings
ENCRYPTION_KEY=strong_encryption_key_for_sensitive_data
ENABLE_2FA=false
PASSWORD_RESET_EXPIRY=3600000
ACCOUNT_LOCK_THRESHOLD=5
ACCOUNT_LOCK_DURATION=1800000

# Audit and Compliance
AUDIT_LOG_ENABLED=true
DATA_RETENTION_PERIOD=365
COMPLIANCE_MODE=standard